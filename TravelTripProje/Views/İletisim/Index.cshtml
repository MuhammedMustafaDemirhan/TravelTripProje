@model TravelTripProje.Models.Sınıflar.İletisim
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}
<head>
    <title>İletişim</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
</head>

<h2 style="text-align:center;">İletişim Sayfası</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}
@using (Html.BeginForm("İlet", "İletisim", FormMethod.Post))
{
    <!-- Container to center the form inside the layout -->
    <div class="container d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 200px);">
        <div class="w-50">
            <div class="form-group row mb-3">
                <div class="col-sm-2">
                    <label>Ad Soyad :</label>
                </div>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.AdSoyad, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-sm-2">
                    <label>Mail :</label>
                </div>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Mail, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-sm-2">
                    <label>Konu :</label>
                </div>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Konu, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-sm-2">
                    <label>Mesaj :</label>
                </div>
                <div class="col-sm-8">
                    @Html.TextAreaFor(m => m.Mesaj, 10, 15, new { @class = "form-control" })
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Gönder</button>
        </div>
    </div>
}
